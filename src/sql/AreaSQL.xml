<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="area">
	
	<!-- Select All -->
	<select id="getAreaList" resultClass="rose.area.bean.Area">
		select * from AREA_INFO
	</select>
	<!-- Select with area_id -->
	<select id="getAreaWithId" resultClass="rose.area.bean.Area" parameterClass="int">
		select * from AREA_INFO where area_id = #id#
	</select>
	
</sqlMap>